<main class="contenedor contenedor-formularios">
    <h1><%- nombrePagina %></h1>
    <form id="formuActualizacionMeeti" class="default-form" action="/nuevo-meeti" method="POST">
        <input type="hidden" name="meeti_id" id="meeti_id" value="<%= meeti.id%>">
        <legend>Sobre el Meeti</legend>

        <div id="alertas"></div>

        <div id="divAlertas"></div>

        <div class="campo">
            <label>Grupo</label>
            <select name="grupoId" id="selectGrupos">
                <option value="" disabled selected>-- Selecciona Grupo --</option>
                <% grupos.forEach(grupo => {%>
                    <option <%= (meeti.grupo_id === grupo.id) ? 'selected' : ''%> value="<%= grupo.id%>"><%= grupo.nombre%></option>
                <%});%>
            </select>
        </div>
        <div class="campo">
            <label>Titulo</label>
            <input type="text" id="titulo" name="titulo" placeholder="Titulo Meeti" value="<%= meeti.titulo%>">
        </div>
        <div class="campo">
            <label>Invitado</label>
            <input type="text" id="invitado" name="invitado" placeholder="Nombre Invitado o Ponente (si aplica)" value="<%= meeti.invitado ? meeti.invitado: ""%>">
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Fecha</label>
                <input type="date" id="fecha" name="fecha" placeholder="Fecha Meeti" value="<%= meeti.fecha%>">
            </div>
            <div class="campo">
                <label>Hora</label>
                <input type="time" id="hora" name="hora" placeholder="Hora Meeti" value="<%= meeti.hora%>">
            </div>
        </div>
        <div class="campo">
            <label>Cupo</label>
            <input type="number" min="1" id="cupo" name="cupo" placeholder="Cupo Meeti (si aplica)" value="<%= meeti.cupo ? meeti.cupo : ""%>">
        </div>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%= meeti.descripcion%>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <legend>Ubicación Meeti</legend>
        <div class="campo buscador">
            <label>Coloca la Dirección del Meeti</label>
            <div class="contenedor-input">
                <input type="text" id="formbuscador" placeholder="Ubicación">
                <small>El asistente colocará una dirección estimada</small>
            </div>
        </div>

        <div class="campo mapa">
            <div id="mapa"></div>
            <p class="informacion">Mueve el PIN hacia el punto exacto en caso de ser necesario</p>
        </div>
        <p class="informacion">Confirma que los siguientes campos sean correctos:</p>
        <div class="campo">
            <label>Dirección</label>
            <input type="text" id="direccion" name="direccion" placeholder="Dirección" value="<%= meeti.direccion%>">
        </div>
        <div class="campo">
            <label>Ciudad</label>
            <input type="text" id="ciudad" name="ciudad" placeholder="Ciudad" value="<%= meeti.ciudad%>">
        </div>
        <div class="campo">
            <label>Estado</label>
            <input type="text" id="estado" name="estado" placeholder="Estado" value="<%= meeti.estado%>">
        </div>
        <div class="campo">
            <label>País</label>
            <input type="text" id="pais" name="pais" placeholder="País" value="<%= meeti.pais%>">
        </div>
        <div class="campo">
            <label>Latitud</label>
            <input type="text" id="lat" name="lat" readonly value="<%= meeti.lat%>">
        </div>
        <div class="campo">
            <label>Longtitud</label>
            <input type="text" id="lng" name="lng" readonly value="<%= meeti.lng%>">
        </div>
        <div class="campo enviar">
            <button type="submit" class="btnCodigo btn-rosaCodigo">Actualizar Meeti</button>
        </div>
    </form>
</main>

<script src="/js/actualizacionMeet.js"></script>


